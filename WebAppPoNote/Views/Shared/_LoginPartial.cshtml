@using Microsoft.AspNetCore.Identity
@using WebAppPoNote.Areas.Identity.Data

@inject SignInManager<WebAppPoNoteUser> SignInManager
@inject UserManager<WebAppPoNoteUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="logout" class="nav-link logout" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link logout btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link logout" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link logout" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
