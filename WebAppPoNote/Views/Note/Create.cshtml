@model CreateNoteViewModel
@{
    ViewData["Title"] = "New Note";
}


@using (Html.BeginForm("Create", "Note", FormMethod.Post))
{

    <form id="newnoteform" class="container">
        <div class="row">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control inputnote title", @placeholder = "Title" })
            <div class="col-8  text-end">
                <label for="expirydate" class="text-end">
                    Enter the expiration date of this
                    note:
                </label>
            </div>
            <div class="col-4">
                <input asp-for="EndDate" class="form-control inputnote col-6" id="expirydate" />
            </div>
            <hr class="col-12">
        </div>
        <div class="row">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "extarea", @rows = "5", @placeholder = "Your note..." })
        </div>
        <div class="row">
            <hr class="col-12">
            <input type="file" class="form-control-file col-7" id="exampleFormControlFile1">
            <button type="submit" class="btn submitregister col-5">Save note</button>
        </div>
    </form>
}



