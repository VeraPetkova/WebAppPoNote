@model UpdateNoteViewModel
@*@{
    ViewData["Title"] = "Edit Note";
}*@

@using (Html.BeginForm("Update", "Note", FormMethod.Post))
{

    <form id="newnoteform" class="container">
        <div class="row">
            @Html.TextBoxFor(m => m.Title, new {@class = "form-control inputnote title", @placeholder = "Title" })
            <div class="col-6  text-end">
                <label for="expirydate" class="text-start">
                    Expiration date:
                </label>
                <input type="date" name="EndDate" class="form-control inputnote col-4" id="expirydate" />

            </div>
            <div class="col-6">
                <label for="priority" class="text-end"> High Priority: </label>
                @Html.CheckBoxFor(c => c.priority)
            </div>
            <hr class="col-12">
        </div>
        <div class="row">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "extarea", @rows = "5", @placeholder = "Your note..." })
        </div>
        <div class="row">
            <hr class="col-12">
            <input type="file" class="form-control-file col-7" id="exampleFormControlFile1">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.StartDate)

            <button type="submit" class="btn submitregister col-5">Save note</button>
        </div>
    </form>
}



